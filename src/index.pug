<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    link(href="https://fonts.googleapis.com/css?family=Montserrat|Quicksand&display=swap" rel="stylesheet")
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet")
    title Toxin UI Kit
  body
    include ./includes/formElements/btn/btn
    include ./includes/formElements/bullet-list/bullet-list
    include ./includes/formElements/checkbox/checkbox
    include ./includes/formElements/comment/comment
    include ./includes/formElements/date-filter/date-filter
    include ./includes/formElements/date-picker/date-picker
    include ./includes/formElements/details/details
    include ./includes/formElements/dropdown/dropdown
    include ./includes/formElements/expendable-checkbox-list/expendable-checkbox-list
    include ./includes/formElements/input/input
    include ./includes/formElements/label/label
    include ./includes/formElements/like/like
    include ./includes/formElements/pagination/pagination
    include ./includes/formElements/rich-checkbox/rich-checkbox
    include ./includes/formElements/slider/slider
    include ./includes/formElements/subscribe-form/subscribe
    include ./includes/formElements/star-rate/star-rate
    nav.nav
      a.h3(href="assets/cards.html") Cards
      a.h3(href="assets/headers-and-footers.html") Headers & Footers
    main.main
      .main__container
        form.form
          +label('text field')
            +input("Email","Text field")
          +label('text field')
            +input("Email","Text field")
          //- Dropdown
          +dropdown
          //- Инпут для даты
          +label('masked text field')
            +input("date","ДД.ММ.ГГГГ")
          //- Календарь
          +date-picker('date dropdown', 'date dropdown')
          //- Календарь в фильтрах
          .form.form_filter
            +label('filter date dropdown')
              +date-filter('date-filter')
            //- Форма подписки
            +label('subscription text field')
              +subscribe
      .main__container
        .form.form_filter
          //- Чекбоксы
          fieldset.form__container.form__container_column
            legend.h3.form__label_mb-16 Checkbox Buttons
            .form__check-container
              +checkbox("Можно курить")
              +checkbox("Можно с питомцами")
              +checkbox("Можно пригласить гостей (до 10 человек)")
          //- Радио кнопки
          .form__container.form__container_column
            h3.h3.form__label_mb-16 Radio Buttons
            +radio("Мужчина","Женщина")
          //- Свичи
          .form__container.form__container_column.form__toggle
            h3.h3.form__label_mb-16 Toggle
            .form__container.form__container_column.u-child-mb-14
              +switch('Получать спецпредложения')
              +switch('Получать спецпредложения')
          //-  Кнопки лайка
          .form__container.form__container_column.u-mt-40
            h3.h3.form__label_mb-16 Like button
            .form__container
              +like('rating')
              +like('rating1')
          //- Рейтинг
          .form__container.form__container_column.u-mt-40
            h3.h3.form__label_mb-16 Rate button
            .form__container.u-child-mr-20
              +starRate
              +starRate
      .main__container
        .form.form_filter
          //- Слайдер
          +slider
          //- Кнопки
          .form__container.form__container_column.u-mt-40
            h3.h3.form__label_mb-16 Buttons
            .form__container.u-child-mr-20
              +btn('Click me','btn_round')
              +btn('Click me','btn_round btn_opacity')
            .form__container.u-child-mr-20.u-mt-30
              +btn('Click me','btn_border')
              +btn('Click me','btn_border btn_border-opacity')
            .form__container.u-child-mr-20.u-mt-30
              +btn('Click me')
              +btn('Click me', 'btn_shade')
            +btnBig('перейти к оплате', 'btn_round u-mt-30')
          //- Пагинатор
          .form__container.form__container_column.u-mt-40
            h3.h3.form__label_mb-16 pagination
            +pagination
      .main__container.main__container_row
        .form.form_filter
          +dropdown
          +dropdown
          +expendable-list
          +expendable-list
          +details('#emoticon', "Комфорт", "Шумопоглощающие стены")
          +details('#location', "Удобство", "Окно в каждой из спален")
      .main__container
        .form
          +dropdown
          fieldset.form__container.form__container_column
            legend.h3.form__label_mb-16 Checkbox Buttons
            .form__check-container
              +rich-check("Широкий коридор", "Ширина коридоров в номере не менее 91 см.")
              +rich-check("Помощник для инвалидов", "На 1 этаже вас встретит специалист  и проводит до номера.")
      .main__container
        .form.form_filter
          +dropdown
          +bullet-list
      .main__container.main__container_comment
        +comment
