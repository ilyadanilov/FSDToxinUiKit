.dropdown
  input.dropdown__checkbox(type="checkbox", name="dropdown" id="dropdown" checked)
  label.dropdown__placeholder(for="dropdown") Сколько гостей
  .dropdown__menu
    .dropdown__item
      label.dropdown__label Взрослые
      .dropdown__input-container
        .dropdown__value-btn(value="Decrease Value") -
        input.dropdown__input(type="number" value="0")
        .dropdown__value-btn(value="Increase Value") +
    .dropdown__item
      label.dropdown__label Дети
      .dropdown__input-container
        .dropdown__value-btn(value="Decrease Value") -
        input.dropdown__input(type="number" value="0")
        .dropdown__value-btn(value="Increase Value") +
    .dropdown__item
      label.dropdown__label Младенцы
      .dropdown__input-container
        .dropdown__value-btn(value="Decrease Value") -
        input.dropdown__input(type="number" value="0")
        .dropdown__value-btn(value="Increase Value") +
    .dropdown__btn-container
      button.btn.btn-shade.dropdown__btn-clear очистить
      button.btn.dropdown__btn-accept применить
